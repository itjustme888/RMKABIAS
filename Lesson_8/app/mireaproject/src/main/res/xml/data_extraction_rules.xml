<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Исключаем файлы кэша и временные файлы -->
        <exclude domain="file" path="cache"/>
        <exclude domain="file" path="no_backup"/>
        <exclude domain="database" path="cache.db"/>
    </cloud-backup>

    <device-transfer>
        <!-- Те же правила для передачи между устройствами -->
        <exclude domain="file" path="cache"/>
        <exclude domain="file" path="no_backup"/>
        <exclude domain="database" path="cache.db"/>
    </device-transfer>
</data-extraction-rules>